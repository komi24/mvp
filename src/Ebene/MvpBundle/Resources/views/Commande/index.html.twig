{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Commande list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Couleurrestaurant</th>
                <th>Couleursection</th>
                <th>Prix</th>
                <th>Datecom</th>
                <th>Dateprep</th>
                <th>Datepret</th>
                <th>Datefin</th>
                <th>Datedesir</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('Ebene_commande_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.couleurrestaurant }}</td>
                <td>{{ entity.couleursection }}</td>
                <td>{{ entity.prix }}</td>
                <td>{% if entity.datecom %}{{ entity.datecom|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateprep %}{{ entity.dateprep|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datepret %}{{ entity.datepret|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datefin %}{{ entity.datefin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datedesir %}{{ entity.datedesir|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('Ebene_commande_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('Ebene_commande_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('Ebene_commande_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
