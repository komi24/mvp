{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Abonnement list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombretag</th>
                <th>Prixtotal</th>
                <th>Facture</th>
                <th>Datedeb</th>
                <th>Datefin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('mvp_abonnement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombretag }}</td>
                <td>{{ entity.prixtotal }}</td>
                <td>{{ entity.facture }}</td>
                <td>{% if entity.datedeb %}{{ entity.datedeb|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datefin %}{{ entity.datefin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('mvp_abonnement_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('mvp_abonnement_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('mvp_abonnement_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
