{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Restaurant</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Couleur1</th>
                <td>{{ entity.couleur1 }}</td>
            </tr>
            <tr>
                <th>Couleur2</th>
                <td>{{ entity.couleur2 }}</td>
            </tr>
            <tr>
                <th>Couleur3</th>
                <td>{{ entity.couleur3 }}</td>
            </tr>
            <tr>
                <th>Dateexp</th>
                <td>{{ entity.dateexp|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('mvp_restaurant') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('mvp_restaurant_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
